SM:
    MainScreen:
    LoginScreen:
    SignScreen:

<MainScreen>:
    name: 'main'

    GridLayout:
        rows: 3
        columns: 1
        padding: root.width *0.1, root.height *0.2, root.height *0.1, root.width *0.2
        spacing: 0, root.height *0.1


        MDLabel:
            text: "Faice"
            font_name: "./fonts/ttf/JetBrainsMono-Regular.ttf"
            size_hint: 1, 1
            font_size: "60sp"
            theme_text_color: "Custom"
            # text_color: 233, 12, 43, 1

        Camera:
            id: camera
            play: False

        MDFillRoundFlatButton:
            text: "Se connecter"
            font_name: "./fonts/ttf/JetBrainsMono-Regular.ttf"
            size_hint: 1, 1
            font_size: "13sp"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "rigth"

        MDFillRoundFlatButton:
            text: 'Play'
            on_press: camera.play = not camera.play

        MDFillRoundFlatButton:
            text: 'Capture'
            on_press: root.capture



