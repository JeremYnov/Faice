<FirstScreen>:
    name: 'first_screen'

    FloatLayout:

        MDLabel:
            pos_hint: {'x':0.1, 'top': 0.9}
            size_hint: (0.2, 0.1)
            text: "Faice"
            font_name: "./fonts/ttf/JetBrainsMono-Regular.ttf"
            font_size: "50sp"

        MDFillRoundFlatButton:
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: (0.3, 0.2)
            text: "Login"
            font_name: "./fonts/ttf/JetBrainsMono-Regular.ttf"
            font_size: "50sp"
            on_release:
                app.root.current = "login_screen"
                root.manager.transition.direction = "right"


<LoginScreen>:

    name: 'login_screen'
    on_pre_enter: root.mainFace()

    FloatLayout:

        MDLabel:
            pos_hint: {'x':0.1, 'top': 0.9}
            size_hint: (0.2, 0.1)
            text: "Faice"
            font_name: "./fonts/ttf/JetBrainsMono-Regular.ttf"
            font_size: "50sp"


<NotesListScreen>:
    name: 'main_screen'
    on_pre_enter: root.get_notes()

    FloatLayout:
        MDLabel:
            pos_hint: {'x':0.1, 'top':0.9}
            size_hint: (0.2, 0.1)
            text: "Faice"
            font_name: "./fonts/ttf/JetBrainsMono-Regular.ttf"
            font_size: "50sp"

        MDFillRoundFlatButton:
            pos_hint: {'y': 0.85, 'x': 0.7}
            size_hint: (0.2, 0.1)
            text: "Reload"
            font_name: "./fonts/ttf/JetBrainsMono-Regular.ttf"
            font_size: "15sp"
            on_press: root.get_notes()


        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(90), dp(90)
            pos_hint: {'center_x': .5, 'center_y': .5}
            active: True

        ScrollView:
            pos_hint: {'center_x': .6, 'center_y': .5}
            size_hint: (0.6, 0.7)
            scroll_timeout: 250
            scroll_distance: 20

            MDList:
                id: notesContainer

        MDFillRoundFlatButton:
            pos_hint: {'y': 0.07, 'x': 0.7}
            size_hint: (0.2, 0.1)
            text: "Add a note"
            font_name: "./fonts/ttf/JetBrainsMono-Regular.ttf"
            font_size: "15sp"
            on_press: root.create_note()

        MDFillRoundFlatButton:
            pos_hint: {'y': 0.07, 'x': 0.1}
            size_hint: (0.2, 0.1)
            text: "Logout"
            font_name: "./fonts/ttf/JetBrainsMono-Regular.ttf"
            font_size: "15sp"
            on_press: root.logout()


<NoteScreen>:
    name: 'note_screen'
    on_pre_enter: root.build()

    FloatLayout:

        MDLabel:
            pos_hint: {'x':0.1, 'top': 0.9}
            size_hint: (0.2, 0.1)
            text: "Faice"
            font_name: "./fonts/ttf/JetBrainsMono-Regular.ttf"
            font_size: "50sp"

        MDTextField:
            id : noteTitle
            multiline: True
            pos_hint: {'top': 0.75, 'right': 0.9}
            size_hint: (0.8, 0.1)
            mode: "fill"
            font_name: "./fonts/ttf/JetBrainsMono-Regular.ttf"
            font_size: "14sp"
            fill_color: 0, 0, 0, 0.1

        MDTextField:
            id : noteContent
            multiline: True
            pos_hint: {'top': 0.6, 'right': 0.9}
            size_hint: (0.8, 0.4)
            mode: "fill"
            font_name: "./fonts/ttf/JetBrainsMono-Regular.ttf"
            font_size: "14sp"
            fill_color: 0, 0, 0, 0.1

        MDFillRoundFlatButton:
            pos_hint: {'y': 0.1, 'x': 0.1}
            size_hint: (0.2, 0.1)
            text: "Return"
            text_color: 1, 1, 1, 1
            md_bg_color: 1, 0, 0, 0.6
            font_size: "15sp"
            on_press: root.return_to_list()

        MDFillRoundFlatButton:
            pos_hint: {'y': 0.1, 'x': 0.5}
            size_hint: (0.2, 0.1)
            text: "Delete"
            text_color: 1, 1, 1, 1
            md_bg_color: 1, 0, 0, 0.6
            font_size: "15sp"
            on_press: root.delete_note()

        MDFillRoundFlatButton:
            pos_hint: {'y': 0.1, 'x': 0.7}
            size_hint: (0.2, 0.1)
            text: "Save"
            font_name: "./fonts/ttf/JetBrainsMono-Regular.ttf"
            font_size: "15sp"
            on_press: root.save_note()