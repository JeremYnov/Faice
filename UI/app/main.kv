SM:
    MainScreen:
    LoginScreen:
    NotesScreen:

<MainScreen>:
    name: 'main'

    FloatLayout:

        MDLabel:
            pos_hint: {'x':0.1, 'top': 0.9}
            size_hint: (0.2, 0.1)
            text: "Faice"
            font_name: "./fonts/ttf/JetBrainsMono-Regular.ttf"
            font_size: "50sp"

        MDFillRoundFlatButton:
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: (0.3, 0.2)
            text: "Login"
            font_name: "./fonts/ttf/JetBrainsMono-Regular.ttf"
            font_size: "50sp"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "right"


<LoginScreen>:

    name: 'login'
    on_enter: root.build()

    FloatLayout:

        MDLabel:
            pos_hint: {'x':0.1, 'top': 0.9}
            size_hint: (0.2, 0.1)
            text: "Faice"
            font_name: "./fonts/ttf/JetBrainsMono-Regular.ttf"
            font_size: "50sp"

        Camera:
            id: camera
            resolution: (300, 500)
            play: True

<NotesScreen>:
    name: 'notes'


